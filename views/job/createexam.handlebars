<style>

</style>

<div class="card card-body">
    <h3>Create Exam for : <span class="text-muted">{{applicant.name}}</span> </h3>
    <h6 class="card-subtitle mb-2 "> Job: <span class="text-muted">{{job.title}}</span></h6>
    <br/>
    <h4 class="card-subtitle mb-2">Select Exam Templates: </h4>


    <form action="/job/applicants/{{job._id}}/sendexam/" method="post">

        <input class="form-control" type="text" id="applicant_id" value="{{applicant.id}}"  name="applicant_id" hidden>


        <div class="form-group">
        <select multiple="multiple" id="my-select" name="examtemplates" REQUIRED>
            {{#each examtemplates}}
                <option value='{{_id}}'>{{title}} : {{type}}</option>
            {{/each}}
        </select>
        </div>

        <div class="form-group">
            <label for="meeting-time">Choose Duration <small>(In minutes)</small>: </label>
            <input class="form-control" type="number" id="duration"  name="duration">
        </div>

        <div class="form-group">
            <label for="meeting-time">Choose Deadline Date/Time: </label>
            <input class="form-control" type="datetime-local" id="meeting-time"  name="deadline">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>










</div>