<div class="card card-body mb-2">
    <h1>{{exam.title}}</h1>
    <p>{{exam.details}}</p>
    {{#each exam.questions}}
        <h3>{{header}}</h3>

        {{#each correct}}
            <input type="text" class="form-control is-valid mb-1" value="{{this}}" disabled>
        {{/each}}

        {{#each incorrect}}
            <input type="text" class="form-control is-invalid mb-1" value="{{this}}" disabled>
        {{/each}}
    {{/each}}
</div>